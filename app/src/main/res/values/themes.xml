<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Satakomobile" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorSurfaceContainer">@color/green_50</item>
        <item name="colorSecondaryContainer">@color/green_200</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="colorOnSurface">@color/neutral_900</item>

        <item name="android:statusBarColor">
            @android:color/transparent
        </item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="edit_text_background">@color/edit_text_background</item>
        <item name="item_foreground">@color/neutral_600</item>
        <item name="card_tonal_background">@color/green_100</item>
        <item name="card_tonal_foreground">@color/green_700</item>
        <item name="header_container_background">@color/green_500</item>
        <item name="sheet_container_background">@color/white</item>
        <item name="android:textViewStyle">@style/ManropeTextViewStyle</item>
        <item name="background_card_item">@color/white</item>
        <item name="splash_icon_color">@color/primary</item>

        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>
        <item name="window_background">@color/background</item>
    </style>

    <style name="BackButton" parent="Widget.AppCompat.ImageButton">
        <item name="tint">@color/green_500</item>
        <item name="android:background">#00000000</item>
    </style>

    <style name="TextSubHeading" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/neutral_500</item>
    </style>

    <style name="EditText">
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="PrimaryButton" parent="Widget.Material3.Button">
        <item name="cornerRadius">15dp</item>
        <item name="android:drawableTint">
            @color/white
        </item>
        <item name="fontFamily">
            @font/manrope_semibold
        </item>
    </style>

    <style name="CustomEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">#000000</item> <!-- Text color -->
        <item name="hintTextColor">@color/neutral_600</item> <!-- Hint color -->
        <item name="android:background">@drawable/bg_edit_text</item> <!-- Background drawable -->
        <item name="android:padding">16dp</item> <!-- Padding -->
        <item name="android:textSize">16sp</item> <!-- Text size -->
        <item name="fontFamily">@font/manrope_light</item> <!-- Font family -->
    </style>

    <style name="DangerButton" parent="Widget.Material3.Button">
        <item name="cornerRadius">15dp</item>
        <item name="backgroundTint">@color/danger</item>
        <item name="android:drawableTint">
            @color/white
        </item>
        <item name="fontFamily">
            @font/manrope_semibold
        </item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ManropeTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">
            @font/manrope_fonts_family
        </item>
    </style>

    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorOnPrimary">
            @color/neutral_900
        </item>
        <item name="android:background">@color/white</item>
        <item name="colorSurfaceContainerHigh">@color/green_50</item>
        <item name="colorOnSurface">@color/neutral_900</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.App.Title.Text
        </item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.App.Button</item>
    </style>


    <style name="MaterialAlertDialog.App.Title.Text" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">@color/neutral_900</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/neutral_900</item>
    </style>

    <style name="Theme.Satakomobile" parent="Base.Theme.Satakomobile" />
</resources>