<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Satakomobile" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurfaceContainer">@color/green_950</item>
        <item name="colorSecondaryContainer">@color/green_600</item>
        <item name="colorOnSecondaryContainer">@color/white</item>
        <item name="colorOnSurfaceVariant">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="android:windowBackground">@color/neutral_900</item>

        <item name="edit_text_background">
            @color/edit_text_background_dark
        </item>
        <item name="item_foreground">@color/white</item>
        <item name="card_tonal_background">@color/green_950</item>
        <item name="card_tonal_foreground">@color/white</item>
        <item name="header_container_background">@color/green_800</item>
    </style>

    <style name="Base.Widget.AppCompat.TextView" parent="Base.Theme.Satakomobile">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BackButton" parent="Widget.AppCompat.ImageButton">
        <item name="tint">@color/green_500</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="TextSubHeading" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="PrimaryButton" parent="Widget.Material3.Button">
        <item name="cornerRadius">15dp</item>
        <item name="android:drawableTint">
            @color/green_900
        </item>
        <item name="fontFamily">
            @font/manrope_semibold
        </item>
        <item name="android:textColor">@color/green_900</item>
    </style>
</resources>